<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:widget="urn:import:ru.malik.myApp3.client.view.widget">
    <container:VerticalLayoutContainer>
        <container:child>
            <form:FieldLabel text="Номер">
                <form:widget>
                    <form:TextField ui:field="number"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child>
            <form:FieldLabel text="Дата">
                <form:widget>
                    <form:DateField ui:field="date"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child>
            <form:FieldLabel text="Постащик">
                <form:widget>
                    <widget:SupplierField ui:field="supplierField"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child>
            <form:FieldLabel text="Сумма">
                <form:widget>
                    <form:DoubleField ui:field="priceSumField"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
    </container:VerticalLayoutContainer>
</ui:UiBinder>